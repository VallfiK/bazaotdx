<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BazaOtdx" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/forest_green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/forest_green</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        
        <!-- Colors -->
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/forest_green</item>
        <item name="colorSecondaryVariant">@color/dark_green</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- Surface colors -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/dark_gray</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
        
        <!-- Status bar style -->
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>
